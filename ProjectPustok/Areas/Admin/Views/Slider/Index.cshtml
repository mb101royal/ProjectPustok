@using ProjectPustok.ViewModels.SliderViewModel
@model IEnumerable<SliderListViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Slider List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Slider" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create new Slider</a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>ButtonText</th>
            <th>ImageUrl</th>
            <th>IsLeft</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Text</td>
                <td>@obj.ButtonText</td>
                <td>@obj.ImageUrl</td>
                <td>@obj.Position</td>
            </tr>
        }
    </tbody>
</table>

</div>