@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Slider List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Slider" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Create new Slider</a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>ButtonText</th>
            <th>ImageUrl</th>
            <th>IsLeft</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
            @if (Model != null)
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.Text</td>
                        <td>@obj.ButtonText</td>
                        <td>@obj.ImageUrl</td>
                        <td>@obj.Position</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Slider" asp-action="Update" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Update</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr colspan="7">No Data</tr>
            }

    </tbody>
</table>

</div>